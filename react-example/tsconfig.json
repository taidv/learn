{
    "compilerOptions": {
        "strictNullChecks": true,
        "noUnusedLocals" : true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "lib": ["dom", "ES2017"],
        "module": "ES2015",
        "target": "es5",
        "jsx": "react"
    },
    "filesGlob": [
        "./src/**/*.tsx",
        "./src/**/*.ts",
        "./typings/tsd.d.ts",
        "!./node_modules/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}